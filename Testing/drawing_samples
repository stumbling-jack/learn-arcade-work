# Import the library first!
import arcade

# Open a window
arcade.open_window(600,600,"Hi.")

# Set background color
arcade.set_background_color(arcade.csscolor.SKY_BLUE)

# Get ready to draw
arcade.start_render()

# Drawing code here
arcade.draw_lrtb_rectangle_filled(0,599,300,0, arcade.csscolor.GREEN)
arcade.draw_rectangle_filled(100,320,20,80, arcade.csscolor.SANDY_BROWN, 5)
arcade.draw_circle_filled(100,370,30, arcade.color.MSU_GREEN)
arcade.draw_rectangle_filled(300,280,20,200,arcade.csscolor.BROWN)
arcade.draw_arc_filled(300,340,80,200,arcade.csscolor.DARK_GREEN, 10,165)

arcade.draw_text("Howdy partner!", 200,200,arcade.color.WHITE,30)
# Finish drawing
arcade.finish_render()

# Keep the window up until closed by user
arcade.run()

